
<div class="add-dog span12">
	<a>Add A Dog</a>
</div>

<%mypets.each(function(pet) { %>
	<div class="span3 dogphoto">
		<div class="dogphotoinner">
			<img id="dogphotoupdate" src= <%=pet.escape('avatar_url')%> alt="PetPic">
		</div>

		<div id="dog-photo-box-lower">
				<%=pet.escape('name')%><br>
				<div id="updatephoto">
					<a id="updatephotolink">Update Photo</a>
				</div>
		</div>

	</div>

				
	<div class="dogabout"> 
		Age <div class="dogstat"> <%=pet.escape('age')%> </div><br/>
		Sex <br/><br/>
		About <br/><br/>
		<%if(pet.escape('care_instructions')) { %>
			Special instructions: <%= pet.escape('care_instructions') %>
		<% } %> 
	</div> 

<% }); %>