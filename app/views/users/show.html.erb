			<img alt="pet-profilepic" src=<%= @user.pet.avatar.url(:medium) %>>
		</div>
	</div>
	<div class="user-profile-form">
			<div class="display-user-info">
				<div class="profile-text"> <%=@user.name%>  </div> 
			</div>
			<br>

			<div class="about-me"> 
				<%= @user.about_me %>
			</div>
			<br>
