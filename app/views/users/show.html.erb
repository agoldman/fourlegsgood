<div class="container">
	<div class = "user-profile-form">
		<div class="profile-alert">  <a class="dark-link" href=""> Credits (<%#=@user.swaps_earned%>) </a> </div>
		<div class= "profile-alert-center">  <a class="dark-link" href="">Appointments (<%#=@user.upcoming%>) </a> </div> 
		<div class="profile-alert">  <a class="dark-link" href="">Messages (<%#=@user.inbox.count%>) </a></div>
	</div>
	<div class="user-profile-form">
		<div class="display-user-info">
			<div class="profile-text"> <%=@user.name%>  </div> 
		</div>
		<br>
		<div class="about-me"> 
			<%#= @user.about_me %>
		</div>
	</div>
	<div class = "user-profile-form">
		<div class="row-fluid">
			<div class="profile-pic span6"> 
				<img src="https://graph.facebook.com/<%=current_user.uid%>/picture?width=200&height=200">
			</div>
			<div class="profile-pic span6"> 	
				<% if !current_user.pet.avatar_url.include?('dogmissing') %>
				  <img src="<%=current_user.pet.avatar%>" height='200' width='200'>
				<% else %>
				  <div class="upload-button">
				  	<a> Upload a Picture of Your Pup </a>
				  	<br> <br>dog icon
				  </div>
				  <%= form_for @user, :html => { :multipart => true } do |form| %>
				    <%= form.fields_for :pet do |pet_fields| %>
					    <%= pet_fields.file_field(:avatar, class: "hidden") %>
					  <% end %>
					  <%= form.submit(class: "hidden") %>
				  <% end %>
			  <% end %>
			</div>
		</div>
	</div>
	<center> <div class="greenbtn btn"> Ask for a Sitter </div> </center>
	 <br><br><br>	
</div>