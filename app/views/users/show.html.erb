<div class="container">



	<div class = "user-profile-form">
		<div class="profile-alert">  <a href="/current_requests/new"> Credits (<%=@user.swaps_earned%>) </a> </div>
		<div class= "profile-alert-center">  <a href="">Upcoming (<%=@user.upcoming%>) </a> </div> 
		<div class="profile-alert">  <a href="">Messages (<%=@user.inbox.count%>) </a></div>
	</div>

	<div class = "user-profile-form">
		<div class="profile-pic"> 
			<img alt="human-profilepic" src=<%= @user.avatar.url(:medium) %>>
