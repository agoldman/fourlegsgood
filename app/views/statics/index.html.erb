<script type="text/javascript">
  $(function () {

  	$('.signupbutton').click(function(event) {
 	  $(".welcomebox").html(
 	  	"<form accept-charset='UTF-8' action='/users' id='signup' method='post'><label for='user_name'>Username</label><input id='user_name' name='user[user-name]' type='text'><br><br><label for='user_email'>Email</label><input id='user_email' name='user[email]' type='text'><br><br><label for='user_password'>Password</label><input id='user_password' name='user[password]' type='password'><br><br><input class='submit_button' name='commit' type='submit' value='Sign Up'></form>"
		);
	});

  	var gallery = ["url('/assets/dog3.jpeg')", "url('assets/dog2.jpg')", "url('/assets/dog.jpg')"];
  	counter = 0;
  	function swapImages(){
		if(counter==0) {
			$(".masthead").fadeTo('slow', 0.2, function() {
				$(this).css("background-image", gallery[0]);
		}).fadeTo('slow', 1)
  		}
  		else { if(counter==1) {
  				$(".masthead").fadeTo('slow', 0.2, function() {
  						$(this).css("background-image", gallery[1]);
  				}).fadeTo('slow', 1)
  			}
  				else {
  					$(".masthead").fadeTo('slow', 0.2, function() {
  						$(this).css("background-image", gallery[2]);
  					}).fadeTo('slow', 1);  		
  				}
  			}
  		if (counter == 2) {
  			counter = 0;
  		}
  		else {
  			counter++;
  		}
  	}
  	setInterval(swapImages, 5000);

  });
</script>

